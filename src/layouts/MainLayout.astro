---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { Sidebar } from "@/components/layout/Sidebar";
import { MobileNav } from "@/components/layout/MobileNav";

interface Props {
  title?: string;
}

const { title = "VibeTravels" } = Astro.props;
const activePath = Astro.url.pathname;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="flex h-screen flex-col md:grid md:grid-cols-[240px_1fr] md:grid-rows-1">
      <!-- Desktop Sidebar -->
      <Sidebar client:load activePath={activePath} transition:persist />

      <!-- Main content area -->
      <div class="flex min-h-0 flex-1 flex-col">
        <!-- Mobile header -->
        <header class="flex h-14 items-center border-b px-4 md:hidden" transition:persist>
          <MobileNav client:load activePath={activePath} />
          <h1 class="ml-4 text-lg font-semibold">VibeTravels</h1>
        </header>

        <!-- Page content -->
        <main class="flex-1 overflow-auto bg-background">
          <slot />
        </main>
      </div>
    </div>

    <Toaster client:load transition:persist="toaster" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
